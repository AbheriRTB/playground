<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    android:nestedScrollingEnabled="true">

    <EditText
        android:id="@+id/etName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="25dp"
        android:autofillHints=""
        android:clickable="false"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:textColor="#292929"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="108dp" />

    <EditText
        android:id="@+id/etLink"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:autofillHints=""
        android:clickable="false"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/link_paste"
        android:inputType="textPersonName"
        android:textColor="#292929"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="108dp" />

    <Button
        android:id="@+id/btnPaste"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_btn_paste"
        android:fontFamily="monospace"
        android:text="@string/link_paste"
        android:textAllCaps="false"
        android:textColor="#D0292929"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnJioMeet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/jio_meet"
            android:focusable="true"
            app:srcCompat="@mipmap/jio" />

        <ImageView
            android:id="@+id/btnGMeet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:contentDescription="@string/google_meet"
            android:focusable="true"
            app:srcCompat="@mipmap/google" />

        <ImageView
            android:id="@+id/btnWebex"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/webex_name"
            android:focusable="true"
            app:srcCompat="@mipmap/webex" />

        <ImageView
            android:id="@+id/btnZoom"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:clickable="true"
            android:contentDescription="@string/zoom_name"
            android:focusable="true"
            app:srcCompat="@mipmap/zoom" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOther"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_btn_other"
            android:fontFamily="monospace"
            android:text="@string/other"
            android:textAllCaps="false"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="Â© Cricketish 2020" />

</LinearLayout>